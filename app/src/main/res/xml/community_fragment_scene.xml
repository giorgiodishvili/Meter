<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet />
        <OnSwipe
            motion:onTouchUp="decelerateAndComplete"
            motion:touchAnchorId="@id/dragableimage"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@+id/dragableimage" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/expand"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet />
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/dragableimage"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@+id/dragableimage" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/dragableimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/search_bar"
            motion:layout_constraintVertical_bias="0.7" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/dragableimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/search_bar"
            motion:layout_constraintVertical_bias="0.0" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/expand">
        <Constraint
            android:id="@+id/dragableimage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/search_bar"
            motion:layout_constraintVertical_bias="0.696"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/expandFromEnd">
        <Constraint
            android:id="@+id/dragableimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/search_bar"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/expandFromEnd"
        motion:duration="1000">
        <KeyFrameSet />
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/dragableimage"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@+id/dragableimage" />
    </Transition>


</MotionScene>