<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_community">

    <fragment
        android:id="@+id/navigation_community"
        android:name="com.example.meter.screens.bottom_nav.community.CommunityFragment"
        android:label="community_fragment"
        tools:layout="@layout/community_fragment">
        <action
            android:id="@+id/action_navigation_home_to_postCarFragment"
            app:destination="@id/navigation_post" />
    </fragment>
    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.example.meter.screens.bottom_nav.profile.favourites.FavouritesFragment"
        android:label="favourites_fragment"
        tools:layout="@layout/favourites_fragment">
        <action
            android:id="@+id/action_navigation_favourites_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/main_auth"
        android:name="com.example.meter.screens.auth.MainAuthFragment"
        android:label="main_auth_fragment"
        tools:layout="@layout/main_auth_fragment">
        <action
            android:id="@+id/action_main_auth_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>
    <fragment
        android:id="@+id/completeProfileFragment"
        android:name="com.example.meter.screens.bottom_nav.profile.editprofile.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_fragment">
        <action
            android:id="@+id/action_navigation_completeProfileInfo_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_completeProfileFragment_to_main_auth"
            app:destination="@id/main_auth"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_navigation_profile"
        app:destination="@id/navigation_profile"
        app:popUpTo="@id/main_navigation"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_navigation_home"
        app:destination="@id/navigation_community"
        app:popUpTo="@id/main_navigation"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/navigation_post"
        android:name="com.example.meter.screens.bottom_nav.PostCarFragment"
        android:label="post_car_fragment"
        tools:layout="@layout/post_car_fragment">
        <action
            android:id="@+id/action_postCarFragment_to_navigation_home"
            app:destination="@id/navigation_community" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.meter.screens.bottom_nav.profile.complete.CompleteProfileFragment"
        android:label="complete_profile_fragment"
        tools:layout="@layout/complete_profile_fragment">

        <action
            android:id="@+id/action_navigation_profile_to_navigation_completeProfileInfo"
            app:destination="@id/completeProfileFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_navigation_favourites"
            app:destination="@id/navigation_favourites" />
        <action
            android:id="@+id/action_navigation_profile_to_myPostskFragment"
            app:destination="@id/myPostskFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_main_auth"
            app:destination="@id/main_auth" />
        <action
            android:id="@+id/action_navigation_profile_to_navigation_home"
            app:destination="@id/navigation_community"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/myPostskFragment"
        android:name="com.example.meter.screens.bottom_nav.profile.myposts.MyPostskFragment"
        android:label="my_postsk_fragment"
        tools:layout="@layout/my_postsk_fragment">
        <action
            android:id="@+id/action_myPostskFragment_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>